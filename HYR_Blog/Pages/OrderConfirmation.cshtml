@page
@model HYR_Blog.Pages.OrderConfirmationModel
@{
}


<div class="bg-ligh p-3">
    <form method="post">


        <div class="row">
            <div class="col-6 p-0">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" placeholder="نام و نام خانوادگی" />
                <span asp-validation-for="FullName" class="text text-danger"></span>
            </div>
            <div class="col-6 p-0">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="تلفن همراه" />
                <span asp-validation-for="PhoneNumber" class="text text-danger"></span>
            </div>
            <div class="col-6 p-0">
                <label asp-for="State" class="form-label"></label>
                <input asp-for="State" class="form-control" placeholder="استان" />
                <span asp-validation-for="State" class="text text-danger"></span>
            </div>
            <div class="col-6 p-0">i
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" placeholder="شهرستان" />
                <span asp-validation-for="City" class="text text-danger"></span>
            </div>
            <div class="col-6 p-0 ml-auto mr-auto">
                <label asp-for="PostalCode" class="form-label"></label>
                <input asp-for="PostalCode" class="form-control" placeholder="کد پستی" />
                <span asp-validation-for="PostalCode" class="text text-danger"></span>
            </div>
            <div class="col-12 col-lg-6 p-2">
                <label asp-for="ContinueAddress" class="form-label"></label>
                <textarea asp-for="ContinueAddress" class="form-control h-100" placeholder="آدرس دقیق"></textarea>
                <span asp-validation-for="ContinueAddress" class="text text-danger"></span>
            </div>
            <div class="col-12 mr-auto ml-auto mt-5">
                <input type="submit" class="form-control btn btn-success" value="تکمیل پرداخت" />
            </div>
        </div>
    </form>
</div>
